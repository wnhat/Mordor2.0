<Window
    x:Class="EyeOfSauron.LogininWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EyeOfSauron"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:EyeOfSauron.ViewModel"
    Title="Login"
    Width="500"
    Height="400"
    d:DataContext="{d:DesignInstance Type=viewModel:UserInfoViewModel}"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    ResizeMode="NoResize"
    SizeToContent="Manual"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    WindowStyle="ThreeDBorderWindow"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="470" />
        </Grid.RowDefinitions>
        <StackPanel Margin="73,95,73,137">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Width="30"
                    Height="30"
                    Padding="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    IsEnabled="False">
                    <Viewbox Width="30" Height="30">
                        <Canvas Width="24" Height="24">
                            <Path
                                Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                                Fill="#FF00838F"
                                RenderTransformOrigin="0.475,0.469" />
                        </Canvas>
                    </Viewbox>
                </Button>
                <TextBox
                    x:Name="userNameTextBox"
                    Grid.Column="1"
                    MaxWidth="400"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="User"
                    AcceptsReturn="True"
                    Style="{StaticResource MaterialDesignFilledTextBox}"
                    TextWrapping="Wrap" />
            </Grid>
            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Width="30"
                    Height="30"
                    Padding="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    IsEnabled="False">
                    <Viewbox Width="30" Height="30">
                        <Canvas Width="24" Height="24">
                            <Path Data="M7 14C5.9 14 5 13.1 5 12S5.9 10 7 10 9 10.9 9 12 8.1 14 7 14M12.6 10C11.8 7.7 9.6 6 7 6C3.7 6 1 8.7 1 12S3.7 18 7 18C9.6 18 11.8 16.3 12.6 14H16V18H20V14H23V10H12.6Z" Fill="#FF00838F" />
                        </Canvas>
                    </Viewbox>
                </Button>
                <PasswordBox
                    x:Name="passwordTextBox"
                    Grid.Column="1"
                    MaxWidth="400"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Password"
                    Style="{StaticResource MaterialDesignFilledPasswordBox}" />
            </Grid>
            <Button
                Width="80"
                Height="40"
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                materialDesign:ButtonAssist.CornerRadius="5"
                Background="#FFB2EBF2"
                Click="LoginButtonClick"
                Content="LOGIN"
                FontFamily="Tahoma"
                FontSize="12"
                FontStyle="Normal"
                FontWeight="Bold"
                Foreground="{DynamicResource PrimaryHueLightForegroundBrush}" />
        </StackPanel>
    </Grid>
</Window>
