                                        Click="AddPanelSampleButton_Click"
                                        Content="添加" />
                                    <Button
                                        Margin="5,0,5,0"
                                        Command="{Binding RefreshMissionCollection}"
                                        Content="刷新" />
                                </StackPanel>-->
                            </Grid>
                        </Grid>
                    </Grid>
                    <materialDesign:Snackbar
                        x:Name="MainSnackbar"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        MessageQueue="{materialDesign:MessageQueue}" />
                </Grid>
            </DockPanel>
        </materialDesign:DrawerHost>
    </materialDesign:DialogHost>
</Window>
