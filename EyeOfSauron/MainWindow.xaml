<Window x:Class="EyeOfSauron.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EyeOfSauron" 
        xmlns:viewmodel="clr-namespace:EyeOfSauron.ViewModel" 
        mc:Ignorable="d"
        ResizeMode="CanResize"
        WindowStyle="ThreeDBorderWindow"
        MaxHeight="2500"
        MaxWidth="3840"
        Title="InspWindow" 
        Height="2500" Width="3840" 
        WindowStartupLocation="CenterScreen" 
        MinHeight="500" MinWidth="800" 
        SizeToContent="Manual" 
        WindowState="Maximized">
    <Viewbox>
        <Grid>
            <UserControl DataContext="{Binding ViewContainer}"/>
            <ContentControl
                            DataContext="{Binding ViewContainer}"
                            Margin="{Binding MarginRequirement, FallbackValue=16}"
                            Content="{Binding Content, UpdateSourceTrigger=PropertyChanged, FallbackValue={x:Null}}"/>
        </Grid>
    </Viewbox>
</Window>
