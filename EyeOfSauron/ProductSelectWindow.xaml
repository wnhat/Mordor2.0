    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Grid>
            <ItemsControl x:Name="productItemsControl" ItemsSource="{Binding ProductInfos}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Width="300"
                            Height="450"
                            MinWidth="300"
                            MinHeight="450"
                            MaxWidth="300"
                            MaxHeight="450"
                            Margin="10,10,10,10"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            materialDesign:ShadowAssist.ShadowDepth="Depth4"
                            Background="White"
                            Click="ProductSelectBuuttonClick">
                            <Grid Width="260" Height="390">
                                <materialDesign:Card
                                    Width="200"
                                    Height="100"
                                    Margin="10,10,10,280"
                                    Padding="8"
                                    Background="{StaticResource PrimaryHueDarkBrush}"
                                    Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                                    UniformCornerRadius="6">
                                    <TextBlock
                                        x:Name="TextBox1"
                                        Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                        Text="{Binding ProductInfo.Key.Name}"
                                        TextAlignment="Center"
                                        TextWrapping="Wrap" />
                                </materialDesign:Card>
                                <TextBlock
                                    Margin="10,240,10,0"
                                    Text="{Binding ProductInfo.Value}"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                                <Ellipse
                                    Width="{Binding RelativeSource={RelativeSource Self}, Path=Height}"
                                    Height="{Binding ProductInfo.Value, Converter={StaticResource Int32ToDoubleConverter}}"
                                    MaxWidth="200"
                                    MaxHeight="200"
                                    Margin="0,130,0,0"
                                    Fill="{DynamicResource MaterialDesignDarkSeparatorBackground}" />
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button
                Margin="83,475,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Button_Click"
                Content="{Binding SelectedProductCardViewModel.ProductInfo.Key.Name}" />
        </Grid>
    </ScrollViewer>

</Window>
