<Window x:Class="EyeOfSauron.ProductSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:Converter="clr-namespace:EyeOfSauron.Converter"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        WindowStyle="ThreeDBorderWindow"
        MaxHeight="2560"
        MaxWidth="3840"
        Title="ProductSelectWindow" 
        Height="800" Width="1400" 
        WindowStartupLocation="CenterScreen" 
        MinHeight="500" MinWidth="800" 
        SizeToContent="Manual" 
        WindowState="Maximized"
        Background="AliceBlue">
    <Window.Resources>
        <WindowChrome x:Key="WindowChromeKey">
            <WindowChrome.ResizeBorderThickness>
                <Thickness>5</Thickness>
            </WindowChrome.ResizeBorderThickness>
            <WindowChrome.CaptionHeight>0</WindowChrome.CaptionHeight>
        </WindowChrome>
        <Converter:BoolToEnumConverter x:Key="BoolToEnumConverter" />
    </Window.Resources>
    <Viewbox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <CheckBox 
                Name="CheckBox1"
                IsChecked="False"
                Content="CheckBox" 
                Grid.Column="2" 
                HorizontalAlignment="Left" 
                Margin="145,150,0,0" 
                VerticalAlignment="Top"/>
                <Button 
                    Click="Button_Click_1" 
                    x:Name="Button1"
                    Visibility="{Binding Path=IsChecked, ElementName=CheckBox1, Converter={StaticResource BoolToEnumConverter}}"
                    HorizontalAlignment="Stretch" 
                    Margin="10,10,10,10" 
                    VerticalAlignment="Stretch" 
                    MinHeight="450" MinWidth="300"
                    MaxHeight="450" MaxWidth="300"
                    Height="450" Width="300" 
                    Background="White" 
                    materialDesign:ShadowAssist.ShadowDepth="Depth4"
                    materialDesign:ButtonAssist.CornerRadius="10">
                    <Grid Width="260" 
                      Height="390">
                        <materialDesign:Card
                        Background="{StaticResource PrimaryHueDarkBrush}"
                        Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                        Width="200"
                        Height="100"
                        Padding="8"
                        UniformCornerRadius="6" 
                        Margin="30,10,30,280">
                            <TextBlock
                        x:Name = "TextBox1"
                        TextWrapping="Wrap"
                        Text="TEXT" 
                        TextAlignment="Center"
                        Style="{StaticResource MaterialDesignHeadline3TextBlock}"/>
                        </materialDesign:Card>
                        <Ellipse 
                        Margin="0,130,0,0"
                        MaxHeight="250"
                        MaxWidth="250"
                        Height="100" 
                        Fill="{DynamicResource MaterialDesignDarkSeparatorBackground}"
                        Width="100"/>
                    </Grid>
                </Button>
                <Button 
                    Grid.Column="1"
                    Click="Button2_Click" 
                    x:Name="Button2"
                    HorizontalAlignment="Stretch" 
                    Margin="10,10,10,10" 
                    VerticalAlignment="Stretch" 
                    MaxHeight="450" MaxWidth="300"
                    MinHeight="450" MinWidth="300"
                    Height="450" Width="300" 
                    Background="White" 
                    materialDesign:ShadowAssist.ShadowDepth="Depth4"
                    materialDesign:ButtonAssist.CornerRadius="10">
                    <Grid Width="260" 
                      Height="390">
                        <materialDesign:Card
                        Background="{StaticResource PrimaryHueDarkBrush}"
                        Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                        Width="200"
                        Height="100"
                        Padding="8"
                        UniformCornerRadius="6" 
                        Margin="30,10,30,280">
                            <TextBlock
                        x:Name = "TextBox2"
                        TextWrapping="Wrap"
                        Text="TEXT" 
                        TextAlignment="Center"
                        Style="{StaticResource MaterialDesignHeadline3TextBlock}"/>
                        </materialDesign:Card>
                        <Ellipse 
                        Margin="0,130,0,0"
                        MaxHeight="250"
                        MaxWidth="250"
                        Height="100" 
                        Fill="{DynamicResource MaterialDesignDarkSeparatorBackground}"
                        Width="100"/>
                    </Grid>
                </Button>
            </Grid>
        </Grid>
    </Viewbox>
</Window>
